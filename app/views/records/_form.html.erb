<%= simple_form_for record do |f| %>
  <%= f.hidden_field :condition_id, value: condition_id %>
  <%= f.input :side, collection: human_keys(Record.sides.keys) %>
  <%= f.input :spreads, collection: human_keys(Record.spreads.keys) %>

  <div class="actions">
    <%= f.submit "Save", class: "btn" %>
  </div>
<% end %>
