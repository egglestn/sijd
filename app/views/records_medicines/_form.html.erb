<%= f.fields_for "records_medicine][#{medicine.id}" do |ff| %>
  <%= ff.hidden_field :medicine_id, value: medicine.id %>
  <tr>
    <td class="first">
      <%= medicine.to_s %>
    </td>
    <td class="user-score">
      <%= ff.collection_radio_buttons :score, RecordsMedicine.scores, :last, :last, boolean_style: :inline  do |rb| %>
        <%= rb.radio_button %>
      <% end %>
      <br/>
      <% star = "â˜†" %>
      <!-- CSS uses right-to-left, so the star index numbers need to be reversed -->
      <% star_index = 5 %>
      <% 5.times do %>
        <span class="star" data-url="/user_score" data-score=<%= [5-star_index] %> ><%= star %></span>
        <% star_index -= 1 %>
      <% end %>
    </td>
  </tr>
<% end %>
