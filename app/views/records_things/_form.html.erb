<%= f.fields_for "records_thing][#{thing.id}" do |ff| %>
  <%= ff.hidden_field :thing_id, value: thing.id %>
  <tr>
    <td>
      <%= thing.to_s %>
    </td>
    <%= ff.collection_radio_buttons :score, RecordsThing.scores, :last, :last, boolean_style: :inline  do |rb| %>
      <td><%= rb.radio_button %></td>
    <% end %>
  </tr>
<% end %>
